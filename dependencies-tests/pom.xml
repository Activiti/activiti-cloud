<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.activiti.cloud.dependencies</groupId>
    <artifactId>activiti-cloud-dependencies-parent</artifactId>
    <version>7.1.0-SNAPSHOT</version>
  </parent>
  <artifactId>activiti-cloud-dependencies-tests</artifactId>
  <packaging>pom</packaging>
  <name>Activiti Cloud :: BOM (Bill of Materials) Tests</name>
  <properties>
    <maven.deploy.skip>true</maven.deploy.skip>
    <enforceFail>true</enforceFail>
    <activiti-cloud-modeling.version>7.1.699</activiti-cloud-modeling.version>
    <example-runtime-bundle.version>7.1.386</example-runtime-bundle.version>
    <example-cloud-connector.version>7.1.334</example-cloud-connector.version>
    <activiti-cloud-audit.version>7.1.320</activiti-cloud-audit.version>
    <activiti-cloud-query.version>7.1.328</activiti-cloud-query.version>
    <activiti-cloud-notifications-graphql.version>7.1.354</activiti-cloud-notifications-graphql.version>
    <activiti-cloud-messages.version>7.1.41</activiti-cloud-messages.version>
  </properties>
  <dependencies>
    <dependency>
      <groupId>org.activiti.cloud.examples</groupId>
      <artifactId>activiti-cloud-modeling</artifactId>
      <version>${activiti-cloud-modeling.version}</version>
      <type>pom</type>
      <exclusions>
        <exclusion>
          <groupId>org.activiti.cloud.modeling</groupId>
          <artifactId>activiti-cloud-starter-modeling</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.postgresql</groupId>
          <artifactId>postgresql</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.h2database</groupId>
          <artifactId>h2</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.activiti.cloud.examples</groupId>
      <artifactId>example-runtime-bundle</artifactId>
      <version>${example-runtime-bundle.version}</version>
      <type>pom</type>
      <exclusions>
        <exclusion>
          <groupId>org.activiti.cloud.rb</groupId>
          <artifactId>activiti-cloud-starter-runtime-bundle</artifactId>
        </exclusion>
        <exclusion>
          <groupId>javax.xml.bind</groupId>
          <artifactId>jaxb-api</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.springframework.cloud</groupId>
          <artifactId>spring-cloud-starter-stream-rabbit</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.postgresql</groupId>
          <artifactId>postgresql</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.h2database</groupId>
          <artifactId>h2</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.activiti.cloud.examples</groupId>
      <artifactId>example-cloud-connector</artifactId>
      <version>${example-cloud-connector.version}</version>
      <type>pom</type>
      <exclusions>
        <exclusion>
          <groupId>org.activiti.cloud.connector</groupId>
          <artifactId>activiti-cloud-starter-connector</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.springframework.cloud</groupId>
          <artifactId>spring-cloud-starter-stream-rabbit</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.activiti.cloud.examples</groupId>
      <artifactId>activiti-cloud-audit</artifactId>
      <version>${activiti-cloud-audit.version}</version>
      <type>pom</type>
      <exclusions>
        <exclusion>
          <groupId>org.activiti.cloud.audit</groupId>
          <artifactId>activiti-cloud-starter-audit</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.postgresql</groupId>
          <artifactId>postgresql</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.h2database</groupId>
          <artifactId>h2</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.springframework.cloud</groupId>
          <artifactId>spring-cloud-starter-stream-rabbit</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.activiti.cloud.examples</groupId>
      <artifactId>activiti-cloud-query</artifactId>
      <version>${activiti-cloud-query.version}</version>
      <type>pom</type>
      <exclusions>
        <exclusion>
          <groupId>org.activiti.cloud.query</groupId>
          <artifactId>activiti-cloud-starter-query</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.postgresql</groupId>
          <artifactId>postgresql</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.h2database</groupId>
          <artifactId>h2</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.springframework.cloud</groupId>
          <artifactId>spring-cloud-starter-stream-rabbit</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.activiti.cloud.examples</groupId>
      <artifactId>activiti-cloud-notifications-graphql</artifactId>
      <version>${activiti-cloud-notifications-graphql.version}</version>
      <type>pom</type>
      <exclusions>
        <exclusion>
          <groupId>org.activiti.cloud.notifications.graphql</groupId>
          <artifactId>activiti-cloud-starter-notifications-graphql</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.activiti.cloud.common</groupId>
          <artifactId>activiti-cloud-services-common-security-keycloak</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.postgresql</groupId>
          <artifactId>postgresql</artifactId>
        </exclusion>
        <exclusion>
          <groupId>com.h2database</groupId>
          <artifactId>h2</artifactId>
        </exclusion>
        <exclusion>
          <groupId>org.springframework.cloud</groupId>
          <artifactId>spring-cloud-starter-stream-rabbit</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-enforcer-plugin</artifactId>
        <executions>
          <execution>
            <id>enforce-dependency-convergence</id>
            <goals>
              <goal>enforce</goal>
            </goals>
            <configuration>
              <fail>${enforceFail}</fail>
              <rules>
                <reactorModuleConvergence>
                  <message>The reactor is not valid</message>
                  <ignoreModuleDependencies>false</ignoreModuleDependencies>
                </reactorModuleConvergence>
                <dependencyConvergence/>
              </rules>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
