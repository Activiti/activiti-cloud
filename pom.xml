<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.activiti.cloud.build</groupId>
    <artifactId>activiti-cloud-parent</artifactId>
    <version>7.0.29</version>
    <relativePath/>
  </parent>
  <groupId>org.activiti.cloud.audit</groupId>
  <artifactId>activiti-cloud-audit-service-parent</artifactId>
  <version>7.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Activiti Cloud Audit :: Parent</name>
  <url>http://activiti.org</url>
  <modules>
    <module>activiti-cloud-audit-dependencies</module>
    <module>activiti-cloud-services-audit-api</module>
    <module>activiti-cloud-services-audit-jpa</module>
    <module>activiti-cloud-starter-audit</module>
  </modules>
  <scm>
    <url>https://github.com/Activiti/activiti-cloud-audit-service</url>
    <connection>scm:git:https://github.com/Activiti/activiti-cloud-audit-service.git</connection>
    <developerConnection>scm:git:https://github.com/Activiti/activiti-cloud-audit-service.git</developerConnection>
    <tag>HEAD</tag>
  </scm>
  <ciManagement>
    <system>Travis</system>
    <url>https://travis-ci.com/Activiti/activiti-cloud-audit-service</url>
  </ciManagement>
  <repositories>
    <repository>
      <id>alfresco</id>
      <name>Activiti Releases</name>
      <url>https://artifacts.alfresco.com/nexus/content/repositories/activiti-releases/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
  </repositories>
  <properties>
    <activiti-cloud-build.version>7.0.29</activiti-cloud-build.version>       
    <activiti-cloud-service-common.version>7.0.23</activiti-cloud-service-common.version>
    <activiti-cloud-audit-service.version>${project.version}</activiti-cloud-audit-service.version>
  </properties>
  <dependencyManagement>
    <!-- This duplicates activiti-cloud-audit-dependencies module but we can't import that module here as this is its parent
         and we want to keep a standard Maven structure -->
    <dependencies>
      <dependency>
        <groupId>org.activiti.cloud.build</groupId>
        <artifactId>activiti-cloud-dependencies-parent</artifactId>
        <version>${activiti-cloud-build.version}</version>
        <scope>import</scope>
        <type>pom</type>       
      </dependency>                
      <dependency>
        <groupId>org.activiti.cloud.common</groupId>
        <artifactId>activiti-cloud-service-common-dependencies</artifactId>
        <version>${activiti-cloud-service-common.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.audit</groupId>
        <artifactId>activiti-cloud-services-audit-parent</artifactId>
        <version>${activiti-cloud-audit-service.version}</version>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.audit</groupId>
        <artifactId>activiti-cloud-services-audit-jpa</artifactId>
        <version>${activiti-cloud-audit-service.version}</version>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.audit</groupId>
        <artifactId>activiti-cloud-services-audit-mongo</artifactId>
        <version>${activiti-cloud-audit-service.version}</version>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.audit</groupId>
        <artifactId>activiti-cloud-starter-audit</artifactId>
        <version>${activiti-cloud-audit-service.version}</version>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.audit</groupId>
        <artifactId>activiti-cloud-starter-audit-mongo</artifactId>
        <version>${activiti-cloud-audit-service.version}</version>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.audit</groupId>
        <artifactId>activiti-cloud-services-audit-api</artifactId>
        <version>${activiti-cloud-audit-service.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.2</version></plugin>
    </plugins>
    </build>
  </project>
