<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.activiti.cloud.dependencies</groupId>
  <artifactId>activiti-cloud-dependencies</artifactId>
  <version>7.0.0-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Activiti Cloud :: BOM (Bill of Materials)</name>
  <description>${project.name}</description>
  <url>http://activiti.org</url>
  <inceptionYear>2010</inceptionYear>
  <organization>
    <name>Alfresco</name>
    <url>http://www.alfresco.com</url>
  </organization>
  <licenses>
    <license>
      <name>Apache v2</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.html</url>
    </license>
  </licenses>
  <developers>
    <developer>
      <id>salaboy</id>
      <name>Mauricio Salatino</name>
      <email>mauricio.salatino@alfresco.com</email>
      <organization>Alfresco</organization>
      <organizationUrl>http://alfresco.com</organizationUrl>
    </developer>
    <developer>
      <id>erdemedeiros</id>
      <name>Elias De Medeiros</name>
      <email>elias.demedeiros@alfresco.com</email>
      <organization>Alfresco</organization>
      <organizationUrl>http://alfresco.com</organizationUrl>
    </developer>
    <developer>
      <id>ryandawsonuk</id>
      <name>Ryan Dawson</name>
      <email>ryan.dawson@alfresco.com</email>
      <organization>Alfresco</organization>
      <organizationUrl>http://alfresco.com</organizationUrl>
    </developer>
  </developers>
  <scm>
    <url>http://github.com/Activiti/${project.artifactId}</url>
    <connection>scm:git:git://github.com/Activiti/${project.artifactId}.git</connection>
    <developerConnection>scm:git:ssh://git@github.com/Activiti/${project.artifactId}.git</developerConnection>
  </scm>
  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/Activiti/Activiti/issues</url>
  </issueManagement>
  <ciManagement>
    <system>Travis</system>
    <url>https://travis-ci.org/Activiti/${project.artifactId}</url>
  </ciManagement>
  <repositories>
    <repository>
      <id>alfresco</id>
      <name>Activiti Releases</name>
      <url>https://artifacts.alfresco.com/nexus/content/repositories/activiti-releases/</url>
      <releases>
        <enabled>true</enabled>
      </releases>
    </repository>
  </repositories>

  <properties>
    <activiti-cloud-api-dependencies.version>7.0.6</activiti-cloud-api-dependencies.version>
    <activiti-cloud-service-common-dependencies.version>7.0.17</activiti-cloud-service-common-dependencies.version>
    <activiti-cloud-runtime-bundle-dependencies.version>7.0.22</activiti-cloud-runtime-bundle-dependencies.version>
    <activiti-cloud-query-dependencies.version>7.0.16</activiti-cloud-query-dependencies.version>
    <activiti-cloud-audit-dependencies.version>7.0.12</activiti-cloud-audit-dependencies.version>
    <activiti-cloud-connectors-dependencies.version>7.0.14</activiti-cloud-connectors-dependencies.version>
    <activiti-cloud-org-dependencies.version>7.0.2</activiti-cloud-org-dependencies.version>
    <activiti-cloud-process-model-dependencies.version>7.0.9</activiti-cloud-process-model-dependencies.version>
    <activiti-cloud-app-dependencies.version>7.0.11</activiti-cloud-app-dependencies.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.activiti.cloud.api</groupId>
        <artifactId>activiti-cloud-api-dependencies</artifactId>
        <version>${activiti-cloud-api-dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.common</groupId>
        <artifactId>activiti-cloud-service-common-dependencies</artifactId>
        <version>${activiti-cloud-service-common-dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.rb</groupId>
        <artifactId>activiti-cloud-runtime-bundle-dependencies</artifactId>
        <version>${activiti-cloud-runtime-bundle-dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.query</groupId>
        <artifactId>activiti-cloud-query-dependencies</artifactId>
        <version>${activiti-cloud-query-dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.audit</groupId>
        <artifactId>activiti-cloud-audit-dependencies</artifactId>
        <version>${activiti-cloud-audit-dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.connector</groupId>
        <artifactId>activiti-cloud-connectors-dependencies</artifactId>
        <version>${activiti-cloud-connectors-dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.modeling</groupId>
        <artifactId>activiti-cloud-org-dependencies</artifactId>
        <version>${activiti-cloud-org-dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.process.model</groupId>
        <artifactId>activiti-cloud-process-model-dependencies</artifactId>
        <version>${activiti-cloud-process-model-dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
      <dependency>
        <groupId>org.activiti.cloud.app</groupId>
        <artifactId>activiti-cloud-app-dependencies</artifactId>
        <version>${activiti-cloud-app-dependencies.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-deploy-plugin</artifactId>
        <version>2.8.2</version></plugin>
    </plugins>
    </build>
  </project>
