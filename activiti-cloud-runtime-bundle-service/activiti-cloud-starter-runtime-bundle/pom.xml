  <build>
    <plugins>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <executions>
          <execution>
            <goals>
              <goal>build-info</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>generate-swagger</id>
      <activation>
        <property>
          <name>!skipSwaggerGen</name>
        </property>
      </activation>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-failsafe-plugin</artifactId>
            <executions>
              <execution>
                <id>generate-swagger</id>
                <goals>
                  <goal>integration-test</goal>
                  <goal>verify</goal>
                </goals>
                <configuration>
                  <includes>
                    <!-- use a custom suffix to be able to skip integration tests and still build swagger specification-->
                    <include>**/*ITSupport.java</include>
                  </includes>
                  <skipTests>false</skipTests>
                  <skipITs>false</skipITs>
                </configuration>
              </execution>
            </executions>
          </plugin>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>build-helper-maven-plugin</artifactId>
            <executions>
              <execution>
                <id>attach-artifacts</id>
                <phase>post-integration-test</phase>
                <goals>
                  <goal>attach-artifact</goal>
                </goals>
                <configuration>
                  <artifacts>
                    <!-- these are artifacts are produced by *ITSupport test-->
                    <!-- Alfresco format JSON-->
                    <artifact>
                      <file>target/swagger.json</file>
                      <type>json</type>
                      <classifier>api-docs</classifier>
                    </artifact>
                    <!-- Swagger YAML-->
                    <artifact>
                      <file>target/swagger.yaml</file>
                      <type>yaml</type>
                      <classifier>api-docs</classifier>
                    </artifact>
                  </artifacts>
                </configuration>
              </execution>
            </executions>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
