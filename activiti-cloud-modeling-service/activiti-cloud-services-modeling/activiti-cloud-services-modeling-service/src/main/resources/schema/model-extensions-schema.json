{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Model extensions schema",
  "description": "Model extensions schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "name": {
      "description": "The name of the model",
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "pattern": "^.+$|^.+.{1,99}$\n"
    }
  },
  "required": [
    "id", "name"
  ]
}
