{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Model extensions schema",
  "description": "Model extensions schema",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "type": {
      "type": "string"
    },
    "name": {
      "description": "The name of the model",
      "type": "string",
      "minLength": 1,
      "maxLength": 26,
      "pattern": "^[a-z]([-a-z0-9]{0,24}[a-z0-9])?$"
    },
    "scope": {
      "description": "The model scope (it can be shared across projects if it is GLOBAL)",
      "type": "string",
      "enum": ["PROJECT","GLOBAL"]
    }
  },
  "required": [
    "id", "name"
  ]
}
